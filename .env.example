# ==========================================
# CLIENT-SIDE ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env.local and update the values according to your setup
# Vite environment variables must be prefixed with VITE_ to be accessible in the browser

# ==========================================
# API CONFIGURATION
# ==========================================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:3000

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Application name and version
VITE_APP_NAME=FlameBox Admin
VITE_APP_VERSION=1.0.0

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Development mode flag
VITE_DEV_MODE=true

# Enable detailed logging in development
VITE_ENABLE_LOGGING=true

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Enable secure cookies (set to true in production)
VITE_SECURE_COOKIES=false

# Enable HTTPS (set to true in production)
VITE_ENABLE_HTTPS=false

# ==========================================
# UI/UX CONFIGURATION
# ==========================================
# Default theme
VITE_DEFAULT_THEME=light

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable OTP-based password reset
VITE_ENABLE_OTP_RESET=true

# Enable role-based authentication
VITE_ENABLE_ROLE_AUTH=true

# Enable user management features
VITE_ENABLE_USER_MANAGEMENT=true

# ==========================================
# EXTERNAL SERVICES
# ==========================================
# Analytics tracking ID (if using Google Analytics, etc.)
# VITE_ANALYTICS_ID=your-analytics-id

# Error reporting service (if using Sentry, etc.)
# VITE_ERROR_REPORTING_DSN=your-error-reporting-dsn

# ==========================================
# PRODUCTION OVERRIDES
# ==========================================
# These should be set in production environment
# VITE_API_BASE_URL=https://your-production-api.com
# VITE_SECURE_COOKIES=true
# VITE_ENABLE_HTTPS=true
# VITE_DEV_MODE=false
# VITE_ENABLE_LOGGING=false